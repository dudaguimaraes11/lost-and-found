// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  phone      String?
  password   String
  anoEscolar String?
  turma      String?
  createdAt  DateTime @default(now())

  // Relações
  items Item[] @relation("ItemsCreated")
  found Item[] @relation("ItemsFound")
}

model Item {
  id          Int      @id @default(autoincrement())
  title       String
  category    String
  description String?
  location    String?
  status      Status   @default(PERDIDO)
  imageUrl    String?
  createdAt   DateTime @default(now())

  // Relações
  owner   User @relation("ItemsCreated", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int

  foundBy   User? @relation("ItemsFound", fields: [foundById], references: [id], onDelete: SetNull)
  foundById Int?
}

enum Status {
  PERDIDO
  ENCONTRADO
  DEVOLVIDO
}
